<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.daniel.convertapp.MainActivity">

    <ImageButton
        android:src="@drawable/temperature"
        android:scaleType="fitCenter"
        android:id="@+id/ib_temperatura"
        style="@style/ButtonConverter"
        android:backgroundTint="#7C2020" />

    <ImageButton
        android:src="@drawable/mass"
        android:scaleType="fitCenter"
        android:id="@+id/ib_masa"
        style="@style/ButtonConverter"
        android:backgroundTint="@android:color/holo_blue_dark" />

    <ImageButton
        android:src="@drawable/distance"
        android:scaleType="fitCenter"
        android:id="@+id/ib_udaljenost"
        style="@style/ButtonConverter"
        android:backgroundTint="@android:color/holo_orange_dark" />

    <ImageButton
        android:src="@drawable/speed"
        android:scaleType="fitCenter"
        android:id="@+id/ib_brzina"
        style="@style/ButtonConverter"
        android:backgroundTint="@android:color/darker_gray" />

</LinearLayout>

